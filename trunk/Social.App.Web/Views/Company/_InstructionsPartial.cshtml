@model Social.App.Web.Models.Company.ViewModels.CompanyInstructionsViewModel


<div class="row">
    <div class="col-lg-12 text-center">
        <h2 class="section-heading">@Model.SectionName</h2>
        <h3 style="margin-bottom:20px;" class="section-subheading text-muted">@Model.SubHeading</h3>
    </div>
</div>
<div class="row text-center">
    @foreach (var video in Model.YouTubeVideos)
    {
        <div class="col-md-4">
            <span class="fa-stack fa-4x">
                <i class="fa fa-circle fa-stack-2x text-primary"></i>
                <i class="fa fa-shopping-cart fa-stack-1x fa-inverse"></i>
            </span>
            <h4 class="service-heading">@video.Header</h4>
            <iframe width="@video.WidthPX" height="@video.HeightPX" src="@video.SourceURL" frameborder="0" allowfullscreen></iframe>
            <p class="text-muted">
                @video.Description
            </p>
        </div>
    }
</div>
